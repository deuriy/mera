.About
	position relative
	min-height 1185px
	padding-top 2.6%
	// padding-bottom 12%

	&_left
		position absolute
		top 0
		width 50%
		padding 31% 0
		pointer-events none

		&::before
			content ''
			display block
			position absolute
			top 0
			right 38%
			width 150%
			height 100%
			border 1px solid $roze
			border-radius 50%

	&_statistics
		// margin-bottom 246px
		margin-bottom 12.8%
		margin-left 166px
	
	&_logoWrapper
		position absolute
		top 50%
		left 48%
		transform translate(-25%, -50%)
		display flex
		justify-content center
		align-items center
		width 41.667%
		height 33.603%
		padding 8.7%
		border-radius 50%
		background $white
		box-shadow 0 20px 80px rgba(46, 56, 91, 0.1)
	
	&_right
		width 50%
		margin-left auto
	
	&_textWrapper
		position relative
		width 700px
		max-width 100%
		padding-right 90px
		padding-bottom 6.7%

		&::after
			content ''
			position absolute
			right 0
			bottom 0
			width 180px
			height 320px
			background linear-gradient(180deg, rgba(150, 80, 135, 0.2) 0%, $roze 100%)
			pointer-events none
	
	&_title
		margin-bottom 0.7em
		font-weight 600
		font-size 64px
		line-height 1.1
		letter-spacing -0.02em
	
	&_text
		margin-bottom 1.4em
		font-size 24px
		line-height 1.4
		color $grey1
	
	&_note
		margin-bottom 5.6em
		color $grey1
		font-size 14px
		line-height 1.8