.Advantages
	max-height 1082px
	// padding 6.3% 0 6%
	padding 6.3% 0 9.7%
	background #2E385B

	&_title
		margin-bottom 5.7em
		color $white
		font-weight 600
		font-size 14px
		line-height 1.1
		letter-spacing -0.02em
		text-transform uppercase

	&_wrapper
		display flex
	
	&_images
		position relative
		flex 600px 0 0
		min-height 680px
		margin-right 60px
	
	&_imgWrapper
		position absolute
		top 0
		right 0
		left 0
		visibility hidden
		opacity 0
		text-align right
		@extend .transition

		&::before,
		&::after
			content ''
			position absolute
			pointer-events none

		&::before
			width 320px
			height 320px
		
		&::after
			width 160px
			height 160px
			border-radius 50%
			background $white

		&-active
			visibility visible
			opacity 1
		
		&-reliability
			&::before
				top 80px
				left 0
				background linear-gradient(180deg, rgba($roze, 0.2) 0%, $roze 80.73%)
				pointer-events none
			
			&::after
				top 160px
				left 80px
		
		&-security
			&::before
				top 82px
				left 160px
				background url("data:image/svg+xml,%3Csvg viewBox='0 0 160 310' fill='none' xmlns='http://www.w3.org/2000/svg'%3E%3Cpath d='M41.411 309.548A160.003 160.003 0 00160 155 160.003 160.003 0 0041.411.452L0 155l41.411 154.548z' fill='url(%23paint0_linear)'/%3E%3Cdefs%3E%3ClinearGradient id='paint0_linear' x1='0' y1='-5' x2='0' y2='315' gradientUnits='userSpaceOnUse'%3E%3Cstop stop-color='%23965087' stop-opacity='.2'/%3E%3Cstop offset='.807' stop-color='%23965087'/%3E%3C/linearGradient%3E%3C/defs%3E%3C/svg%3E") 0 0 no-repeat
			
			&::after
				top 157px
				left 0
		
		&-comfort
			&::before
				top 82px
				left 0
				border-radius 50%
				background linear-gradient(180deg, rgba($roze, 0.2) 0%, $roze 80.73%)
			
			&::after
				display none
		
		&-innovations
			&::before
				top 82px
				left 0
				border-radius 50%
				background linear-gradient(180deg, rgba($roze, 0.2) 0%, $roze 80.73%)
				clip rect(0, 160px, auto, auto)
			
			&::after
				top 80px
				left 160px
		
		&-openness
			&::before
				top 82px
				left 0
				border-radius 50%
				background url("data:image/svg+xml,%3Csvg viewBox='0 0 320 320' fill='none' xmlns='http://www.w3.org/2000/svg'%3E%3Cpath d='M0 160C0 71.634 71.635 0 160 0c88.366 0 160 71.634 160 160s-71.634 160-160 160S0 248.366 0 160zm240 0c0-44.183-35.817-80-80-80s-80 35.817-80 80 35.817 80 80 80 80-35.817 80-80z' fill='url(%23paint0_linear)'/%3E%3Cdefs%3E%3ClinearGradient id='paint0_linear' x1='160' y1='320' x2='160' y2='0' gradientUnits='userSpaceOnUse'%3E%3Cstop stop-color='%23965087' stop-opacity='.2'/%3E%3Cstop offset='.807' stop-color='%23965087'/%3E%3C/linearGradient%3E%3C/defs%3E%3C/svg%3E") 0 0 no-repeat
			
			&::after
				display none
		
		&-development
			&::before
				top 82px
				left 0
				border-radius 50%
				background url("data:image/svg+xml,%3Csvg viewBox='0 0 320 320' fill='none' xmlns='http://www.w3.org/2000/svg'%3E%3Cpath d='M160 0A160 160 0 110 160h160V0z' fill='url(%23paint0_linear)'/%3E%3Cdefs%3E%3ClinearGradient id='paint0_linear' x1='160' y1='320' x2='160' y2='0' gradientUnits='userSpaceOnUse'%3E%3Cstop stop-color='%23965087' stop-opacity='.2'/%3E%3Cstop offset='.807' stop-color='%23965087'/%3E%3C/linearGradient%3E%3C/defs%3E%3C/svg%3E") 0 0 no-repeat
			
			&::after
				top 160px
				left 80px
	
	&_items
		flex auto 1 1
		margin-top 50px

	&_item
		// margin-bottom 39px
		margin-bottom 36px

		&:last-child
			margin-bottom 0

		&-active
			.Advantages_itemTitle
				margin-bottom 0.35em
				color $white

				&::before
					left 0
					width 80px
					background $white

			.Advantages_itemContent
				max-height 400px
	
	&_itemTitle
		position relative
		padding-left 120px
		font-weight 600
		font-size 48px
		line-height 1.1
		letter-spacing -0.02em
		color $blue
		cursor pointer
		@extend .transition

		&::before
			content ''
			position absolute
			top 0
			bottom 0
			left 40px
			width 40px
			height 2px
			margin auto
			background $blue
			@extend .transition

	&_itemContent
		max-height 0
		margin-left 120px
		overflow hidden
		color $white
		font-size 16px
		line-height 1.8
		@extend .transition