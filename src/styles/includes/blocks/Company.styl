.Company
	padding 4% 3.1% 4.2%

	&_label
		width 1200px
		margin 0 auto 6.9em
	
	&_wrapper
		position relative
		display flex
	
	&_logo
		position relative
		display block
		flex 240px 0 1
		margin-right 3.4%

		&::before
			content ''
			position absolute
			width 100%
			padding-top 100%
			border-radius 50%
			background $roze
			clip-path polygon(0 0%,50% 0%,50% 100%,0 100%)
		
		&::after
			content ''
			position absolute
			top 0
			right 0
			width 50%
			padding-top 50%
			border-radius 50%
			background $grey
	
	&_titleWrapper
		flex 600px 0 1
	
	&_title
		margin-bottom 0.48em
		font-weight 600
		font-size 88px
		line-height 1.1
		letter-spacing -0.02em
	
	&_slogan
		max-width 20em
		font-size 24px
		line-height 1.4
		letter-spacing -0.02em
	
	&_textWrapper
		flex 600px 0 1
	
	&_text
		width 500px
		max-width 100%
		margin-top 1.1em
		margin-bottom 4.5em
		font-size 14px
		line-height 1.8
		color $grey1

		p
			margin-bottom 1.8em

			&:last-child
				margin-bottom 0