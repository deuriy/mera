.Conditions
  padding 8.2% 0 7.4%
  background url('../img/pattern.png') right top / 34.4% auto no-repeat

  @media $lgMinus
    padding 6% 0

  @media $smMinus
    padding 4% 0
    background transparent

  &_header
    margin-bottom -0.6em

    @media $smMinus
      margin-bottom 25px
      text-align center

  &_title
    margin-bottom 0.64em
    font-weight 600
    font-size 64px
    line-height 1.1
    letter-spacing -0.02em

    @media $lgMinus
      font-size 48px

    @media $smMinus
      font-size 40px

    @media $xs
      font-size 33px

  &_paymentMethods
    display flex
    align-items flex-start

    @media $lgMinus
      justify-content center

    @media $xs
      flex-direction column
      align-items center

  &_paymentMethod
    &:first-child
      margin-top 5em
      margin-right 5em

      @media $smMinus
        margin-top 0

      @media $xs
        margin-right 0
        margin-bottom 25px
