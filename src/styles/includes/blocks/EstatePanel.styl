.EstatePanel
	position relative
	display flex
	width 37.5em
	font-size 16px
	box-shadow 0 0.75em 2.5em rgba(46, 56, 91, 0.2)

	@media $lgMinus
		font-size 14px
	
	@media $xxs
		max-width 100%
		flex-direction column
		font-size 15px

	&_left,
	&_right
		flex 50% 1 1
	
	&_left
		padding 2.125em 1.3125em 1.875em
		background $blue
		color $white
	
	&_item
		display flex
		align-items flex-start
		margin-bottom 6px
		line-height 1.4

		&:last-child
			margin-bottom 0
	
	&_itemName
		flex 5em 0 0
		margin-top 4px
		margin-right 1em
		font-weight 600
		font-size 0.75em
		text-transform uppercase
	
	&_itemValue
		flex 100px 0 0
	
	&_right
		display flex
		align-items flex-start
		padding 2.0625em 1.25em 1.875em
		background $white
	
	&_logo
		position relative
		flex-shrink 0
		width 5em
		height 5em
		margin-right 0.75em
		border-radius 50%
		background $roze
		
		&::before
			content ''
			position absolute
			top -2px
			left 0
			width 100%
			height calc(50% + 2px)
			border-top-left-radius 50%
			border-top-right-radius 50%
			background $white
		
		&::after
			content ''
			position absolute
			width 2.5em
			height 2.5em
			border-radius 50%
			background $grey
	
	&_title
		margin-bottom 0.9em
		font-weight 600
		font-size 0.75em
		line-height 1.4
		text-transform uppercase
	
	&_cost
		display flex
		align-items flex-end
		font-weight 600
		line-height 1.1
		color $roze
	
	&_number
		margin-right 0.25em
		font-size 4em
	
	&_currency
		margin-bottom 0.4em
		font-size 1.125em