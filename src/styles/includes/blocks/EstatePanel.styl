.EstatePanel
	position relative
	display flex
	width 600px
	box-shadow 0 12px 40px rgba(46, 56, 91, 0.2)

	&_left,
	&_right
		flex 50% 1 1
	
	&_left
		padding 34px 21px 30px
		background $blue
		color $white
	
	&_item
		display flex
		align-items flex-start
		margin-bottom 6px
		line-height 1.4

		&:last-child
			margin-bottom 0
	
	&_itemName
		flex 80px 0 0
		margin-top 4px
		margin-right 16px
		font-weight 600
		font-size 12px
		text-transform uppercase
	
	&_itemValue
		flex 100px 0 0
	
	&_right
		display flex
		align-items flex-start
		padding 33px 20px 30px
		background $white
	
	&_logo
		position relative
		flex-shrink 0
		width 80px
		height 80px
		margin-right 12px
		border-radius 50%
		background $roze
		
		&::before
			content ''
			position absolute
			top -2px
			left 0
			width 100%
			height calc(50% + 2px)
			border-top-left-radius 50%
			border-top-right-radius 50%
			background $white
		
		&::after
			content ''
			position absolute
			width 40px
			height 40px
			border-radius 50%
			background $grey
	
	&_title
		margin-bottom 0.9em
		font-weight 600
		font-size 12px
		line-height 1.4
		text-transform uppercase
	
	&_cost
		display flex
		align-items flex-end
		font-weight 600
		line-height 1.1
		color $roze
	
	&_number
		margin-right 0.25em
		font-size 64px
	
	&_currency
		margin-bottom 0.4em
		font-size 18px