.Header
	position fixed
	right 0
	left 0
	top 0
	display flex
	justify-content space-between
	padding 23px 60px
	height $xlHeaderHeight 
	z-index 100
	background-color: rgba(255, 255, 255, 0)
	transition: all 0.4s

	@media $lgMinus
		height $lgMinusHeaderHeight 
		padding 20px 30px
	
	@media $xs
		height $xsHeaderHeight 
		padding 15px 20px

	&_left,
	&_right
		display flex
		align-items center
	
	&_logo
		margin-right 87px

		@media $lgMinus
			margin-right 50px

		@media $smMinus
			margin-right 40px
	
	&_phone
		margin-top 0.3em
		margin-right 3.4em

		@media $lgMinus
			margin-right 2em

		@media $smMinus
			margin-right 1.6em
	
	&-sticky
		background-color: rgba(255, 255, 255, 1)
	
	&-frontpage
		.Header_phone
			margin-top 0
			margin-right 4.1em

			@media $lgMinus
				margin-right 2em

			@media $smMinus
				margin-right 1.6em
