.NewsBlock
	position relative
	display flex
	align-items flex-start
	padding 2.7% 0 3.6%
	border-bottom 1px solid rgba($grey, 0.5)
	font-size 16px

	@media $lgMinus
		font-size 13px
		// font-size 15px

	@media $smMinus
		flex-wrap wrap
		font-size 10px
		// font-size 12px
		// font-size 14px
	
	@media $xs
		flex-direction column
		// padding 2% 30px 2.5% 0
		padding 20px 30px 20px 0
		font-size 14px

		&:last-child
			border-bottom none

	&_date
		flex 6.21428em 0 0
		margin-right 3.8em
		font-size 0.875em
		line-height 1.8
		color $grey

		@media $lgMinus
			margin-right 7em

		@media $smMinus
			margin-right 3em
		
		@media $xs
			flex-basis auto
			margin-bottom 0.6em
	
	&_title
		flex 12.5em 0 0
		margin-right 1.4em
		font-family $angelicaProFont
		font-style italic
		font-size 2.25em
		line-height 1.1
		color $black

		@media $lgMinus
			margin-right 2.4em
		
		@media $smMinus
			margin-right 0.9em
		
		@media $xs
			flex-basis auto
			margin-bottom 10px
		
		@media $xxs
			font-size 1.8em
	
	&_text
		flex 27.5em 0 0
		margin-top 6px
		color $grey
		font-size 1em
		line-height 1.8

		@media $xs
			flex-basis auto
	
	&_arrowTopRight
		flex-shrink 0
		margin-left auto

		@media $xs
			position absolute
			top 20px
			right 0
	
	&-borderTop
		border-top 1px solid rgba($grey, 0.5)