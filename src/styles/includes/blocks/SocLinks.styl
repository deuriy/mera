.SocLinks
	&_list
		display flex
	
	&_item
		margin-right 1em

		&:last-child
			margin-right 0
	
	&-twoCol
		.SocLinks_list
			flex-wrap wrap
			width 8em

			@media $lgMinus
				width 7em

			@media $smMinus
				width 5.8em
		
		.SocLinks_item
			&:first-child
				margin-bottom 1em
	
	&-footer
		@media $xs
			.SocLinks_list
				justify-content center