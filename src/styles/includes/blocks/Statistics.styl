.Statistics
	display flex
	padding-right 40px
	padding-left 40px

	@media $xs
		flex-direction column
	
	@media $xxs
		padding-right 0
		padding-left 0

	&_item
		margin-right 6.4%

		@media $xs
			display flex
			align-items center
			margin-right 0
			margin-bottom 20px

		&:last-child
			margin-right 0

	&_number
		margin-bottom 0.15em
		font-style italic
		font-size 80px
		font-family $angelicaProFont
		color $blue

		@media $lgMinus
			font-size 70px

		@media $smMinus
			font-size 60px

		@media $xxs
			font-size 54px
		
		@media $xs
			flex 50% 1 1
			margin-bottom 0
			padding-right 23px
			text-align right
	
	&_text
		display flex
		font-weight 600
		font-size 14px
		line-height 1.4
		text-transform uppercase
		color $grey1

		@media $lgMinus
			font-size 13px
		
		@media $xs
			flex 50% 1 1

		&::before
			content ''
			width 40px
			height 2px
			margin-top 9px
			margin-right 20px
			background $roze

			@media $xxs
				display none
	
	&-center
		justify-content center